<h1 class="mt-3"><%= @deck.name %></h1>

<% if @deck.flashcards.any? %>
  <% @deck.flashcards.each do |card|  %>
    <%= render "flashcards/flashcard", flashcard: card %>
  <% end %>
<% else %>
  You have no flashcards yet. <%= link_to "Create one", new_deck_deck_flashcard_path(@deck) %>.
<% end %>
