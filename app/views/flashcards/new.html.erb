<h1>Create your flashcard</h1>

<%= simple_form_for @flashcard do |f| %>
  <%= f.input :slug %>
  <%= f.input :difficulty, collection: Flashcard::DIFFICULTIES %>
  <%= f.input :front, as: :rich_text_area %>
  <%= f.input :back, as: :rich_text_area %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
